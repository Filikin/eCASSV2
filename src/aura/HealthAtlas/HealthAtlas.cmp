<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId" access="global" controller="HealthAtlasController">
	<aura:attribute name="streetAddresses" type="Object" />
    
    <aura:attribute name="clientRecord" type="Contact" />
    <force:recordData aura:id="forceRecord"
                      recordId="{!v.recordId}"
                      targetFields="{!v.clientRecord}"
                      fields="Id,CurrentAddress__c,Small_Area__c, CHO__c, DED__c, MailingState"
					  recordUpdated="{!c.partialAddress}" 
                      mode="EDIT" />
    
	<div aura:id="editDialog" role="dialog" tabindex="-1" aria-labelledby="header43" class="slds-fade-in-open">
            <div class="slds-modal__header">
                <h2 class="slds-text-heading--medium">Get Small Area</h2>
            </div>
            <div class="slds-modal__content slds-p-around--medium ">
                <lightning:input aura:id="county" name="county" label="County" required="true"  placeholder="Enter county..." onchange="{!c.partialAddress}" value="{!v.clientRecord.MailingState}"/>
                <lightning:input aura:id="street" name="street" label="Street" required="true"  placeholder="Enter street..." onchange="{!c.partialAddress}" value="{!v.clientRecord.CurrentAddress__c}"/>
    			<lightning:input aura:id="smallarea" name="smallarea" label="Small Area" readonly="true" value="{!v.clientRecord.Small_Area__c}"/>
    			<lightning:input aura:id="ded" name="smallarea" label="Electoral Division" readonly="true" value="{!v.clientRecord.DED__c}"/>
    			<lightning:input aura:id="cho" name="smallarea" label="CHO" readonly="true" value="{!v.clientRecord.CHO__c}"/>
				<lightning:select aura:id="addresses" name="addresses" label="Addresses" onchange="{!c.displaySmallArea}">
					<aura:iteration items="{!v.streetAddresses}" var="item">
    					<option value="{!item}">{!item}</option>
					</aura:iteration>	
    			</lightning:select>    
          	</div>
            <div class="slds-modal__footer">                
				<lightning:button variant="brand" label="Accept" onclick="{!c.saveRecord}" />
            </div>
    </div>
</aura:component>